<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo claro -->
    <solid android:color="#C5E2F0"/> <!-- Blanco, puedes cambiar a #F9F9F9 -->

    <!-- Bordes redondeados -->
    <corners android:radius="12dp"/>

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Gris claro -->

    <!-- Sombra interna (simulada con padding) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
