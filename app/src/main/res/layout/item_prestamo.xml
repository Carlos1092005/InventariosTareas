<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemPrestamo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_item_dashboard"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvEquipoPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#14287D"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvInstructorPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvCantidadPrestamo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvEstadoPrestamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="@drawable/bg_estado_prestamo"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvFechaPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#888888"
        android:gravity="end"/>

</LinearLayout>